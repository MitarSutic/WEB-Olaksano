@if (ViewBag.ErrorMessage != null)
{
    <div style="color:red;">@ViewBag.ErrorMessage</div>
}
<h2>Prijava</h2>
<form action="~/Prijava/Login" method="post">
    <table>
        <tr>
            <td>Username:</td>
            <td><input type="text" name="kIme" /></td>
        </tr>
        <tr>
            <td>Password:</td>
            <td><input type="password" name="sifra" /></td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="submit" value="Login" />
            </td>
        </tr>
    </table>
</form>
@if (ViewBag.pacijenti != null)
{
    <h3>Pacijenti</h3>
    <table border="1">
        <tr>
            <th>Korisnicko Ime</th>
            <th>Ime</th>
            <th>Prezime</th>
            <th>Email</th>
            <th>Datum Rodjenja</th>
            <th>JMBG:</th>
        </tr>
        @foreach (var pacijent in ViewBag.pacijenti)
        {
            <tr>
                <td>@pacijent.KorisnickoIme</td>
                <td>@pacijent.Ime</td>
                <td>@pacijent.Prezime</td>
                <td>@pacijent.Email</td>
                <td>@pacijent.DatumRodjenja.ToString("dd/MM/yyyy")</td>
                <td>@pacijent.JMBG</td>
            </tr>
        }
    </table>
 }


